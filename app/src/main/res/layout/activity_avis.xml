<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Avis">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/avis_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/quantum_grey300">
        <ImageView
            android:id="@+id/addAvis"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_add"
            />
        <TextView
            android:id="@+id/region_moyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="10"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginTop="15dp"
            android:layout_marginStart="120dp"
            />
        <TextView
            android:id="@+id/region_avis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:text="Destination"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginTop="15dp"
            android:layout_marginStart="100dp"
            />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/avis_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/avis_toolbar"/>

</RelativeLayout>