<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_grey100"
    tools:context=".AddFeedback">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Us with your Feedback"
        android:layout_centerHorizontal="true"
        android:textSize="36dp"
        android:textColor="@color/blue"
        android:textStyle="italic"
        android:layout_marginTop="70dp"
        android:fontFamily="cursive"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
android:layout_centerInParent="true"        >
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:background="@color/quantum_yellow50"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/feedback_image"
                android:layout_margin="25dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/profil"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/black"
            />
            <TextView
                android:id="@+id/feedback_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textSize="24dp"
                android:textColor="@color/blue"
                android:textStyle="italic"
                android:layout_toRightOf="@id/feedback_image"
                android:layout_marginTop="40dp"
                />
            <EditText
                android:id="@+id/myfeedback"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="      Feedback"
                android:textColorHint="@color/quantum_grey600"
                android:textColor="@color/black"
                />

                <TextView
                    android:id="@+id/add_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:text="Add"
                    android:textColor="@color/quantum_grey600"
                    android:fontFamily="cursive"
                    android:textSize="35dp"
                    />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>