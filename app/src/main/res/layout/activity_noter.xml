<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/quantum_grey300"
    android:layout_height="match_parent"
    tools:context=".Noter">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Rainting"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/quantum_grey600"
        android:textSize="60dp"/>
    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:background="@color/quantum_grey600"
            android:layout_width="300dp"
            android:layout_height="400dp">
            <EditText
                android:inputType="number"
                android:id="@+id/note_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_centerHorizontal="true"
                android:hint="  Rainting"
                android:textColorHint="@color/quantum_grey600"
                android:background="@drawable/empty"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/save_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:layout_centerHorizontal="true"
                android:text="OK"
                android:fontFamily="cursive"
                android:textColorHint="@color/quantum_grey600"
                android:textColor="@color/quantum_grey300"
                android:textSize="45dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>