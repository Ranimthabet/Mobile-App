<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:background="@color/quantum_grey300"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/quantum_grey300"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myfriend_imageprofile"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="15dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/black"
            android:src="@drawable/profil"
            />
        <TextView
            android:id="@+id/myfriend_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/myfriend_imageprofile"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/myfriend_useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username@gmail.com"

            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/myfriend_imageprofile"
            android:layout_marginStart="5dp"/>


<View
    android:layout_below="@+id/myfriend_imageprofile"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>