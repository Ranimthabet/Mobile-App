<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/quantum_grey300"
            >
            <ImageView
                android:id="@+id/optioneavis"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_postoption"
                android:layout_marginTop="15dp"
                android:visibility="invisible"
                android:layout_toRightOf="@id/singleavis_username"
                android:layout_marginStart="130dp"
                />
            <Button
                android:id="@+id/deleteavis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="Delete"
                android:drawableRight="@drawable/ic_delete"
                android:backgroundTint="@color/black"
                android:visibility="invisible"
                android:textColor="@color/quantum_googred"
                android:textSize="16dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/singavis_userimage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/profil"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />
            <TextView
                android:id="@+id/singleavis_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="26dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/singavis_userimage"
                android:fontFamily="cursive"
                />
            <TextView
                android:id="@+id/singleavis_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textColor="@color/quantum_grey600"
                android:textSize="12dp"
                android:layout_toRightOf="@id/singavis_userimage"
                android:layout_below="@id/singleavis_username"
                />
            <View
                android:layout_width="180dp"
                android:layout_height="2dp"
                android:background="@color/quantum_grey600"
                android:layout_below="@id/singavis_userimage"
                android:layout_marginStart="25dp"
                />
            <TextView
                android:id="@+id/singleavis_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/singavis_userimage"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textColorHint="@color/quantum_grey600"
                android:hint="  Please help us with your(Avis) "
                android:paddingBottom="20dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        </RelativeLayout>